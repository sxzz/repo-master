{
  "name": "repo-master",
  "version": "0.1.0",
  "packageManager": "pnpm@7.29.3",
  "description": "A GitHub CLI for PRs, issues, and reproduction.",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/repo-master#readme",
  "bugs": {
    "url": "https://github.com/sxzz/repo-master/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/repo-master.git"
  },
  "files": [
    "bin",
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": "./*"
  },
  "bin": {
    "repo-master": "bin/repo-master.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.json,.md",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsup && tsx scripts/postbuild.mts",
    "test": "vitest",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "consola": "^2.15.3",
    "enquirer": "^2.3.6",
    "octokit": "^2.0.14",
    "ora": "^6.3.0",
    "parse-github-url": "^1.0.2",
    "simple-git": "^3.17.0",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@sxzz/eslint-config-prettier": "^2.4.5",
    "@sxzz/eslint-config-ts": "^2.4.5",
    "@types/node": "^18.15.3",
    "bumpp": "^9.0.0",
    "chalk": "^5.2.0",
    "eslint": "^8.36.0",
    "eslint-define-config": "^1.16.0",
    "fast-glob": "^3.2.12",
    "prettier": "^2.8.4",
    "tsup": "^6.6.3",
    "tsx": "^3.12.5",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14.19.0"
  }
}
